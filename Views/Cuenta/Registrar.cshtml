@model FacturacionElectronicaSV.Models.Usuario
@{
    ViewData["Title"] = "Registro de Usuario";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h4>Registro de Usuario</h4>
            <small>Sistema de Facturación Electrónica</small>
        </div>
        <div class="card-body">
            <form asp-action="Registrar" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NombreUsuario" class="form-label">Usuario</label>
                        <input asp-for="NombreUsuario" class="form-control" />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Clave" class="form-label">Contraseña</label>
                        <input asp-for="Clave" type="password" class="form-control" />
                        <span asp-validation-for="Clave" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="NIT" class="form-label">NIT</label>
                        <input asp-for="NIT" class="form-control" />
                        <span asp-validation-for="NIT" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="NRC" class="form-label">NRC</label>
                        <input asp-for="NRC" class="form-control" />
                        <span asp-validation-for="NRC" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="CodActividad" class="form-label">Código Actividad</label>
                        <input asp-for="CodActividad" class="form-control" />
                        <span asp-validation-for="CodActividad" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="DescActividad" class="form-label">Descripción Actividad</label>
                        <input asp-for="DescActividad" class="form-control" />
                        <span asp-validation-for="DescActividad" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="NombreComercial" class="form-label">Nombre Comercial</label>
                        <input asp-for="NombreComercial" class="form-control" />
                        <span asp-validation-for="NombreComercial" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="TipoEstablecimiento" class="form-label">Tipo Establecimiento</label>
                        <input asp-for="TipoEstablecimiento" class="form-control" />
                        <span asp-validation-for="TipoEstablecimiento" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Complemento" class="form-label">Complemento Dirección</label>
                        <input asp-for="Complemento" class="form-control" />
                        <span asp-validation-for="Complemento" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Departamento" class="form-label">Departamento</label>
                        <input asp-for="Departamento" class="form-control" />
                        <span asp-validation-for="Departamento" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Municipio" class="form-label">Municipio</label>
                        <input asp-for="Municipio" class="form-control" />
                        <span asp-validation-for="Municipio" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Telefono" class="form-label">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-5">Registrar</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center text-muted">
            &copy; 2025 | DigiFactura SV
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
