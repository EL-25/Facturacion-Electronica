@model IEnumerable<FacturacionElectronicaSV.Models.Receptor>

<div class="container mt-4">
    <h4>Listado de Clientes</h4>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <div class="mb-3 text-end">
        <a asp-action="Crear" class="btn btn-primary">Registrar Nuevo Cliente</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark text-center">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Tipo Documento</th>
                <th>Número Documento</th>
                <th>Correo</th>
                <th>Departamento</th>
                <th>Municipio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="8" class="text-center text-muted">No hay clientes registrados.</td>
                </tr>
            }
            else
            {
                int index = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@index</td>
                        <td>@item.Nombre</td>
                        <td>@item.TipoDocumento</td>
                        <td>@item.NumeroDocumento</td>
                        <td>@item.Correo</td>
                        <td>@item.Departamento</td>
                        <td>@item.Municipio</td>
                        <td class="text-center">
                            <a asp-action="Editar" asp-route-id="@item.IdReceptor" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-action="Eliminar" asp-route-id="@item.IdReceptor" class="btn btn-sm btn-danger" onclick="return confirm('¿Está seguro que desea eliminar este cliente?');">Eliminar</a>
                        </td>
                    </tr>
                    index++;
                }
            }
        </tbody>
    </table>
</div>
