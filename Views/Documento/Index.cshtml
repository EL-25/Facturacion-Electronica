@{
    ViewData["Title"] = "Panel Principal";
    var nit = "0614-000000-999-9";
    var nrc = "000000-0";
    var nombreUsuario = "Distribuidora LA. SA";
}

<!-- Bootstrap y FontAwesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(to right, #007bff, #00c6ff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        display: flex;
        flex-direction: row;
    }

    .sidebar {
        width: 220px;
        background-color: #004080;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: stretch;
        box-shadow: 2px 0 5px rgba(0,0,0,0.2);
    }

        .sidebar a,
        .sidebar button {
            display: block;
            color: white;
            padding: 12px 20px;
            text-decoration: none;
            font-size: 0.95rem;
            background: none;
            border: none;
            text-align: left;
            width: 100%;
            cursor: pointer;
        }

            .sidebar a:hover,
            .sidebar button:hover {
                background-color: #0059b3;
            }

        .sidebar .submenu {
            padding-left: 30px;
            font-size: 0.9rem;
            background-color: #003366;
        }

    .main-content {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .top-bar {
        width: 100%;
        background-color: #004080;
        color: white;
        padding: 10px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

        .top-bar .left-info {
            font-size: 0.95rem;
        }

        .top-bar .right-user {
            font-size: 0.95rem;
            font-weight: bold;
        }

    .main-card {
        width: 100%;
        max-width: 420px;
        margin: 40px auto;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.2);
        background-color: white;
        padding: 30px;
        text-align: center;
    }

        .main-card h2 {
            color: #004080;
            margin-bottom: 20px;
        }

    .login-footer {
        background-color: #f8f9fa;
        text-align: center;
        padding: 10px;
        font-size: 0.85rem;
        color: #666;
    }

    .rotate {
        transform: rotate(180deg);
        transition: transform 0.3s ease;
    }

    .chevron {
        transition: transform 0.3s ease;
    }
</style>

<div class="sidebar">
    <a href="#"><i class="fas fa-home"></i> Inicio</a>
    <a href="/Clientes/Index"><i class="fas fa-building"></i> Clientes</a>
    <a href="/Factura/Crear"><i class="fas fa-cart-shopping"></i> Sistema de facturación</a>
    <button type="button" data-bs-toggle="collapse" data-bs-target="#submenuConsultas"
            aria-expanded="false" aria-controls="submenuConsultas"
            class="d-flex justify-content-between align-items-center px-3 py-2 text-white border-0 bg-transparent">
        <span><i class="fas fa-search"></i> Consultas</span>
        <i class="fas fa-chevron-down chevron" id="chevronIcon"></i>
    </button>
    <div class="collapse" id="submenuConsultas">
        <a href="/Documento/ConsultarEmitidos" class="submenu">Consultar DTE emitidos</a>
        <a href="/Documento/ConsultarEliminados" class="submenu">Consultar DTE eliminados</a>
        <a href="/Factura/BuscarPorDTE" class="submenu">Buscar DTE por Código</a>
    </div>
    <a href="#" data-bs-toggle="modal" data-bs-target="#modalSalir">
        <i class="fas fa-sign-out-alt"></i> Salir
    </a>
</div>

<div class="main-content">
    <div class="top-bar">
        <div class="left-info">
            <span><strong>NIT:</strong> @nit</span> &nbsp;&nbsp;
            <span><strong>NRC:</strong> @nrc</span>
        </div>
        <div class="right-user">
            <i class="fas fa-user-circle"></i> @nombreUsuario
        </div>
    </div>

    <div class="main-card">
        <h2>Bienvenido al sistema DigiFactura SV</h2>
        <p>Desde aquí podrás gestionar tus documentos tributarios electrónicos.</p>
    </div>

    <div class="login-footer">
        &copy; 2025 | Ministerio de Hacienda – El Salvador
    </div>
</div>

<!-- Modal de confirmación para salir -->
<div class="modal fade" id="modalSalir" tabindex="-1" aria-labelledby="modalSalirLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="modalSalirLabel">Confirmación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body text-center">
                ¿Deseas salir del sistema?
            </div>
            <div class="modal-footer justify-content-center">
                <a href="/Cuenta/Logout" class="btn btn-danger">Sí</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- JS para girar flechita -->
<script>
    const submenu = document.getElementById('submenuConsultas');
    const chevron = document.getElementById('chevronIcon');

    submenu.addEventListener('show.bs.collapse', () => {
        chevron.classList.add('rotate');
    });

    submenu.addEventListener('hide.bs.collapse', () => {
        chevron.classList.remove('rotate');
    });
</script>